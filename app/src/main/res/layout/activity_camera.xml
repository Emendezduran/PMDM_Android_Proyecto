<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4C3"
    tools:context=".CameraActivity">

    <TextView
        android:id="@+id/reto4"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:clickable="false"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="Reto 4"
        android:textColor="#BDC581"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/descripcion4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcion4"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:clickable="false"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="Hazte una foto con tu movil"
        android:textColor="#BDC581"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reto4" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="203dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#BDC581"
        android:fontFamily="@font/bungee"
        android:text="Tomar Foto"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="278dp"
        android:layout_height="231dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcion4"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>