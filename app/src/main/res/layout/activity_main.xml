<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9A546"
    android:backgroundTint="#F0F4C3"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="408dp"
        android:layout_height="152dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ffda79"
        android:fontFamily="@font/bungee"
        android:text="primero"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="408dp"
        android:layout_height="152dp"
        android:backgroundTint="#ff5252"
        android:fontFamily="@font/bungee"
        android:text="cuarto"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="408dp"
        android:layout_height="152dp"
        android:backgroundTint="#ffb142"
        android:fontFamily="@font/bungee"
        android:text="segundo"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="408dp"
        android:layout_height="152dp"
        android:backgroundTint="#ff793f"
        android:fontFamily="@font/bungee"
        android:text="tercero"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="296dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:fontFamily="@font/holtwood_one_sc"
        android:onClick="restart"
        android:text="Retos AnKo"
        android:textColor="#BDC581"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>