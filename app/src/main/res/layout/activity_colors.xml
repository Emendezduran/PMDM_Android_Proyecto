<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFD"
    android:backgroundTint="#F0F4C3"
    tools:context=".ColorsActivity">

    <TextView
        android:id="@+id/descripcion1"
        android:layout_width="300dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:clickable="false"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="haz click para buscar el color"
        android:textColor="#BDC581"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reto1" />

    <TextView
        android:id="@+id/reto1"
        android:layout_width="154dp"
        android:layout_height="85dp"
        android:clickable="false"
        android:fontFamily="@font/holtwood_one_sc"
        android:text="Reto 1"
        android:textColor="#BDC581"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnc1"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="#ffda79"
        android:fontFamily="@font/bungee"
        android:text="ffda79"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcion1" />

    <Button
        android:id="@+id/btnc2"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="#ffb142"
        android:fontFamily="@font/bungee"
        android:text="ffb142"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnc1" />

    <Button
        android:id="@+id/btnc3"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="#ff793f"
        android:fontFamily="@font/bungee"
        android:text="ff793f"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnc2" />

    <Button
        android:id="@+id/btnc4"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="#ff5252"
        android:fontFamily="@font/bungee"
        android:text="ff5252"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnc3" />

</androidx.constraintlayout.widget.ConstraintLayout>